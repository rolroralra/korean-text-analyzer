<configuration>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>result.log</file>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="FILE" />
    <appender-ref ref="CONSOLE" />
  </root>

  <logger name="com.kakaobank.tools.comment.analyzer" level="INFO"/>
  <logger name="com.kakaobank.tools.comment.analyzer.extractor" level="INFO"/>
  <logger name="com.kakaobank.tools.comment.analyzer.csv" level="INFO"/>
  <logger name="com.kakaobank.tools.comment.analyzer.name" level="INFO"/>
</configuration>